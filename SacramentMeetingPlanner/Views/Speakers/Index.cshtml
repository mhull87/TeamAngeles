@model IEnumerable<SacramentMeetingPlanner.Models.Speaker>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BulletinID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Bulletin)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BulletinID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Bulletin.ClosingSong)
            </td>*@
        <td>
            <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.SpeakerID">Edit</a> 
            <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.SpeakerID">Details</a> 
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.SpeakerID">Delete</a>
        </td>
        </tr>
}
    </tbody>
</table>
