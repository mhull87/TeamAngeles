@page
@model MegaDeskRazor.Pages.AddQuote.IndexModel

@{
    ViewData["Title"] = "View";
}

<h1>View All Quotes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <select asp-for="SurfaceMaterial" asp-items="Model.Materials">
            <option value="">All</option>
        </select>
        Note: <input type="text" asp-for="SearchString" />
        <input class="btn btn-outline-secondary" type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a class="text-warning" asp-route-sort="Customer Name">
                    @Html.DisplayNameFor(model => model.QuoteForm[0].CustomerName)
                </a>
            </th>
            <th>
                <a class="text-warning" asp-route-sort="Quote Date">
                    @Html.DisplayNameFor(model => model.QuoteForm[0].QuoteDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].Depth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].Drawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].RushOption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.QuoteForm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RushOption)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>





            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
