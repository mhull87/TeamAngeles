@page
@model MegaDeskRazor.Pages.AddQuote.IndexModel

@{
    ViewData["Title"] = "View";
}

<h2 class="h1 padding-top">View All Quotes</h2>


    <a class="btn btn-outline-secondary mb-n5" asp-page="Create">Create New</a>

<form>
    <p class="text-right">
        <select asp-for="SurfaceMaterial" asp-items="Model.Materials">
            <option value="">All</option>
        </select>
        Customer Name: <input type="text" asp-for="SearchString" />
        <input class="btn btn-outline-secondary" type="submit" value="Filter" />
    </p>
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <a class="text-warning" asp-route-sort="Customer Name">
                    @Html.DisplayNameFor(model => model.QuoteForm[0].CustomerName)
                </a>
            </th>
            <th>
                <a class="text-warning" asp-route-sort="Quote Date">
                    @Html.DisplayNameFor(model => model.QuoteForm[0].QuoteDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteForm[0].Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.QuoteForm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>


            <td class="table-secondary text-center">
                <a class="btn btn-outline-warning" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
