@page
@model MegaDeskRazor.Pages.AddQuote.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>QuoteForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuoteForm.ID" />
            <div class="form-group">
                <label asp-for="QuoteForm.CustomerName" class="control-label"></label>
                <input asp-for="QuoteForm.CustomerName" class="form-control" />
                <span asp-validation-for="QuoteForm.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteForm.QuoteDate" class="control-label"></label>
                <input asp-for="QuoteForm.QuoteDate" class="form-control" />
                <span asp-validation-for="QuoteForm.QuoteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteForm.Width" class="control-label"></label>
                <input asp-for="QuoteForm.Width" class="form-control" />
                <span asp-validation-for="QuoteForm.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteForm.Depth" class="control-label"></label>
                <input asp-for="QuoteForm.Depth" class="form-control" />
                <span asp-validation-for="QuoteForm.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteForm.Area" class="control-label"></label>
                <input asp-for="QuoteForm.Area" class="form-control" />
                <span asp-validation-for="QuoteForm.Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteForm.Drawers" class="control-label"></label>
                <input asp-for="QuoteForm.Drawers" class="form-control" />
                <span asp-validation-for="QuoteForm.Drawers" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuoteForm.Material" class="control-label"></label>
                <select asp-for="QuoteForm.Material" class="form-control" asp-items="Model.Materials"></select>
                <span asp-validation-for="QuoteForm.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteForm.RushOption" class="control-label"></label>
                <select asp-for="QuoteForm.RushOption" class="form-control" asp-items="Model.RushTime"></select>
                <span asp-validation-for="QuoteForm.RushOption" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="QuoteForm.Total" class="control-label"></label>
                <input asp-for="QuoteForm.Total" class="form-control" />
                <span asp-validation-for="QuoteForm.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
